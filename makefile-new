IDIR =../include
CC=gcc
CPPFLAGS=-I$(IDIR) -std=c++11

ODIR=obj
LDIR =../lib

LIBS=-lm

_DEPS = policies.hpp error_check.hpp dataStructures.hpp
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ = memsim.o dataStructures.o fifo.o lru.o vms.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))


$(ODIR)/%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CPPFLAGS)

memsim: $(OBJ)
	$(CC) -o $@ $^ $(CPPFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~ 